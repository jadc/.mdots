[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# shortcuts
alias \
	v='$EDITOR' \
	p='paru' \
	pp='paru -Syu --noconfirm' \
	py='python3' \
	yt='yt-dlp' \
	clear='tput reset' \
	mycron='sudo crontab -u $USER -e' \
	ig='instaloader --login=majideyes' \
	myip='curl ifconfig.me' \
	hss='hugo server --noHTTPCache' \
	condainit='[ -f /opt/miniconda3/etc/profile.d/conda.sh ] && source /opt/miniconda3/etc/profile.d/conda.sh'

# flags
alias \
	du='du -h' \
	cp='cp -ivp' \
	mv='mv -iv' \
	mkdir='mkdir -pv' \
	make='make -j$(nproc)' \
	ffmpeg='ffmpeg -hide_banner' \
	ffprobe='ffprobe -hide_banner' \
	mpvm='mpv --profile=movie' \
	ssh='TERM=xterm-color ssh' \
	ag="ag --pager='less -XFR'" \
	vidir='vidir -v' \
	ytsub='yt-dlp --sub-lang en --write-auto-sub --skip-download'

## colors
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	fgrep='fgrep --color=auto' \
	egrep='egrep --color=auto' \
	diff="diff --color=auto"

## long
alias \
    7zs='7z a -t7z -mx=9 -mfb=273 -ms -md=31 -myx=9 -mtm=- -mmt -mmtf -md=1536m -mmf=bt3 -mmc=10000 -mpb=0 -mlc=0' \
	cl="curl -F 'clbin=<-' https://clbin.com" \
	gp='git add . && git commit -m "$(date +%Y-%m-%d_%H:%M:%S)" && git push' \
	wavtoflac='flac --best --delete-input-file -e -p -V -f --keep-foreign-metadata *.wav' \
	texview='latexmk -pdf -pvc *.tex' \
	sharedir='python -m http.server 25566'
   #sl='rm -f config.h; sudo make clean install' \
